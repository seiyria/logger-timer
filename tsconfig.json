{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",

    "lib": ["es2023", "dom"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
